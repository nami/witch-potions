<div class="container mt-5">
  <h1><%= @cocktail.name  %></h1>
  <div>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Add a dose", class: "btn btn-success" %>
    <% end %>
  </div>
  <br>
  <p><%= link_to "Back", cocktails_path %></p>
</div>
