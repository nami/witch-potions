<div class="container mt-4">

  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-sm-4 card-container mt-4">
      <div class="card-flip">
          <div class="card front">
            <div class="card-block my-4">
              <div class="potion-card-image">
                <%= image_tag ("#{cocktail.photo}") %>
              </div>
              <div class="potion-card-text mt-2">
                <%= cocktail.name %>
              </div>
            </div>
           </div>
          <div class="card back">
            <div class="card-block pl-4 pt-2">
              <% cocktail.doses.each do |dose| %>
                <p><%= "#{dose.ingredient.name} - #{dose.description}" %></p>
              <% end %>
              <p><%= link_to "Add new dose", cocktail_path(cocktail), :class => "btn btn-dark" %></p>
            </div>
          </div>
      </div>
      <!-- <p><%#= link_to cocktail.name, cocktail_path(cocktail) %></p> -->
    </div>
  <% end %>
  </div>
  <div class ="d-flex justify-content-center mt-5">
    <h6><%= link_to image_tag("small_new_potion.gif", :class => 'sm-ptn'), new_cocktail_path %></h6>
  </div>
</div>

